---
type Article = {
  title: string;
  date: string; //YYYY-MM-DD
  path: string;
};

type Props = {
  articleList: Array<Article>;
};

const { articleList, ...props } = Astro.props;
---

<ul class="l-articleList">
  {
    articleList.map(({ title, date, path }) => (
      <li class="l-articleList__item">
        <a class="l-articleList__link" href={path}>
          <div class="l-articleList__linkInner">
            <time class="l-articleList__dateTime" datetime={date}>
              {date.replaceAll("-", ".")}
            </time>
            <h3 class="l-articleList__heading">{title}</h3>
          </div>
        </a>
      </li>
    ))
  }
</ul>
